{
    "name": "deanar-test-gh-actions",
    "version": "0.0.11-1",
    "description": "Test GH actions with NPM packages",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "files": [
        "dist/**/*.{js,d.ts}"
    ],
    "types": "dist/index.d.ts",
    "scripts": {
        "clear": "rimraf dist/",
        "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
        "build": "npm run clear && ttsc && rollup --config",
        "test": "tap --timeout=60 --disable-coverage  --allow-empty-coverage -- test/**/*.ts",
        "prepublishOnly": "npm run --silent build",
        "prepare": "echo prepare",
        "preversion": "npm run --silent lint && npm run --silent test",
        "postversion": "git push && git push --tags",
        "snippet:build": "rollup --config snippet/rollup.config.mjs"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com:rdeanar/test-gh-actions.git"
    },
    "author": {
        "name": "deanar",
        "email": "rdeanar@gmail.com"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/rdeanar/test-gh-actions/issues"
    },
    "homepage": "https://github.com/rdeanar/test-gh-actions#readme",
    "devDependencies": {
        "@rollup/plugin-replace": "^2.4.2",
        "@rollup/plugin-typescript": "^8.2.1",
        "@types/tap": "^15.0.2",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/eslint-plugin-tslint": "^4.29.2",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.25.0",
        "eslint-plugin-import-alias": "^1.2.0",
        "eslint-plugin-jsdoc": "^32.3.3",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-react": "^7.23.2",
        "rollup": "^2.51.1",
        "tap": "^20.0.3",
        "ts-node": "^10.9.2",
        "tslint": "^6.1.3",
        "ttypescript": "^1.5.15",
        "typescript": "~4.7.4",
        "typescript-transform-paths": "^3.5.5"
    }
}
